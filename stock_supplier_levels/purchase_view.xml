<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="purchase_order_form_ssl" model="ir.ui.view">
            <field name="name">purchase.order.form.ssl</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <field name="company_id" position="after">
                    <field name="force_reduce_supplier"/>
                </field>
                <xpath expr="//tree[@string='Purchase Order Lines']/field[@name='price_subtotal']" position="after">
                    <field name="reduce_supplier"/>
                    <field name="state" invisible="1"/>
                </xpath>
           </field>
        </record>

        <record id="purchase_order_line_form_ssl" model="ir.ui.view">
            <field name="name">purchase.order.line.form.ssl</field>
            <field name="model">purchase.order.line</field>
            <field name="inherit_id" ref="purchase.purchase_order_line_form"/>
            <field name="arch" type="xml">
                <field name="company_id" position="after">
                    <field name="reduce_supplier"/>
                    <field name="state" invisible="1"/>
                </field>
           </field>
        </record>

    </data>
</openerp>
