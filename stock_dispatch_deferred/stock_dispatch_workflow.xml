<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- Activity -->
        <record id="act_dispatch_partial" model="workflow.activity">
            <field name="wkf_id" ref="stock_dispatch.dispatch_wkf"/>
            <field name="name">dispatch_partial</field>
            <field name="kind">function</field>
            <field name="action">action_partial()</field>
        </record>
        <!-- Transition -->
        <record id="trans_dispatch_confirmed_partial" model="workflow.transition">
            <field name="act_from" ref="stock_dispatch.act_dispatch_confirmed"/>
            <field name="act_to" ref="act_dispatch_partial"/>
            <field name="signal">partial</field>
        </record>
        <record id="trans_dispatch_partial_done" model="workflow.transition">
            <field name="act_from" ref="act_dispatch_partial"/>
            <field name="act_to" ref="stock_dispatch.act_dispatch_done"/>
            <field name="signal">done</field>
        </record>
    </data>
</openerp>
