<?xml version="1.0"?>
<openerp>
    <data>
        <record id="purchase_order_form_edit" model="ir.ui.view">
            <field name="name">purchase.order.form.edit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form" />
            <field name="arch" type="xml">
                <button name="purchase_cancel" position="after">
                    <button name="action_run_order_edit" states="confirmed,approved" string="Edit Order" type="object" groups="base.group_user"/>
                </button>
                <field name="origin" position="after">
                    <field name="order_edit_id"/>
                </field>
            </field>
        </record>
    </data>
</openerp>