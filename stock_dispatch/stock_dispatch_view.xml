<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_dispatch_tree" model="ir.ui.view">
            <field name="name">stock.dispatch.tree</field>
            <field name="model">stock.dispatch</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Dispatch">
                    <field name="id"/>
                    <field name="carrier_id"/>
                    <field name="dispatch_date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_dispatch_form" model="ir.ui.view">
            <field name="name">stock.dispatch.form</field>
            <field name="model">stock.dispatch</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Dispatch">
                    <group colspan="4">
                        <field name="carrier_id" select="1"/>
                        <field name="dispatch_date" select="1"/>
                        <field name="date"/>
                        <field name="complete_date"/>
                    </group>
                    <group col="6" colspan="4">
                        <field name="state"/>
                        <button name="cancel" states="draft" string="Cancel Dispatch" icon="gtk-execute"/>
                        <button name="confirmed" states="draft" string="Confirm Dispatch" icon="gtk-execute"/>
                        <button name="draft" states="confirmed" string="Edit Dispatch" icon="gtk-execute"/>
                        <button name="done" states="confirmed" string="Dispatch Complete" icon="gtk-execute"/>
                    </group>
                    <separator string="Stock Moves" colspan="4" />
                    <field colspan="4" name="stock_moves" nolabel="1" widget="many2many" on_change="on_change_stock_moves(stock_moves)"/>
                </form>
            </field>
        </record>

        <record id="action_dispatch_form" model="ir.actions.act_window">
            <field name="name">Dispatch</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">stock.dispatch</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="view_dispatch_tree"/>
        </record>
        <menuitem action="action_dispatch_form" id="menu_action_dispatch_form" parent="stock.menu_stock_root"/>

        <record id="action_dispatch_draft_form" model="ir.actions.act_window">
            <field name="name">Draft Dispatch</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">stock.dispatch</field>
            <field name="view_type">form</field>
            <field name="domain">[('state','=','draft')]</field>
        </record>
        <menuitem action="action_dispatch_draft_form" id="menu_action_dispatch_draft_form" parent="menu_action_dispatch_form"/>

        <record id="action_dispatch_confirmed_form" model="ir.actions.act_window">
            <field name="name">Confirmed Dispatch</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">stock.dispatch</field>
            <field name="view_type">form</field>
            <field name="domain">[('state','=','confirmed')]</field>
        </record>
        <menuitem action="action_dispatch_confirmed_form" id="menu_action_dispatch_confirmed_form" parent="menu_action_dispatch_form"/>

        <act_window
            domain="[('dispatch_id', '=', active_id)]"
            id="dispatch_view_stock_moves"
            name="Stock Moves for Dispatch"
            res_model="stock.move"
            src_model="stock.dispatch"
        />

    </data>
</openerp>
