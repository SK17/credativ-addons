<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <menuitem id="menu_stock_dispatch" parent="stock.menu_stock_root" name="Moves Pending Dispatch"/>

        <record id="action_available_moves" model="ir.actions.act_window">
            <field name="name">Pending Dispatch</field>
            <field name="res_model">stock.move</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="domain">[('state', '=', 'assigned'), ('picking_type', '=', 'out')]</field>
            <field name="view_id" ref="stock.stock_move_tree"/>
        </record>
        <menuitem action="action_available_moves" id="menu_waiting" parent="menu_stock_dispatch"/>

        <record id="action_nodispatch_moves" model="ir.actions.act_window">
            <field name="name">Not in Dispatches</field>
            <field name="res_model">stock.move</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="domain">[('state', '=', 'assigned'), ('picking_type', '=', 'out'), ('dispatch_id', '=', False)]</field>
            <field name="view_id" ref="stock.stock_move_tree"/>
        </record>
        <menuitem action="action_nodispatch_moves" id="menu_nodispatch" parent="menu_stock_dispatch"/>

        <record id="view_dispatch_tree" model="ir.ui.view">
            <field name="name">stock.dispatch.tree</field>
            <field name="model">stock.dispatch</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Dispatch">
                    <field name="name"/>
                    <field name="carrier_id"/>
                    <field name="dispatch_date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_dispatch_search" model="ir.ui.view">
            <field name="name">stock.dispatch.search</field>
            <field name="model">stock.dispatch</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Search Dispatch">
                    <group col="10" colspan="4">
                        <filter icon="terp-dialog-close" string="Done" name="done" domain="[('state','=','done')]"/>
                        <filter icon="terp-camera_test" string="Confirmed" name="confirmed" domain="[('state','=','confirmed')]"/>
                        <filter icon="terp-stock" string="Draft" name="draft" domain="[('state','=','draft')]"/>
                        <separator orientation="vertical"/>
                        <field name="name"/>
                        <field name="dispatch_date"/>
                        <field name="carrier_id" widget="selection" domain="[('category_id', 'child_of', [%(res_partner_category_dispatch)d])]"/>
                    </group>
                    <newline/>
                    <group expand="0" string="Group By..." colspan="4" col="4" groups="base.group_extended">
                        <filter string="State" icon="terp-stock_effects-object-colorize" domain="[]" context="{'group_by':'state'}"/>
                        <filter string="Planned Dispatch Date" icon="terp-go-month" domain="[]" context="{'group_by':'dispatch_date'}"/>
                        <filter string="Carrier" icon="terp-personal" domain="[]" context="{'group_by':'carrier_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="view_dispatch_form" model="ir.ui.view">
            <field name="name">stock.dispatch.form</field>
            <field name="model">stock.dispatch</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Dispatch">
                    <group colspan="4">
                        <field name="name"/>
                        <field name="warehouse_id"/>
                        <field name="carrier_id" domain="[('category_id', 'child_of', [%(res_partner_category_dispatch)d])]"/>
                        <newline/>
                        <field name="dispatch_date" on_change="on_change_dispatch_date(dispatch_date)"/>
                        <field name="cutoff_date"/>
                        <field name="date"/>
                        <field name="complete_date"/>
                    </group>
                    <group col="2" colspan="2">
                        <field name="state"/>
                    </group>
                    <group col="6" colspan="2">
                        <button name="cancel" states="draft" string="Cancel Dispatch" icon="gtk-execute"/>
                        <button name="confirmed" states="draft" string="Confirm Dispatch" icon="gtk-execute"/>
                        <button name="draft" states="confirmed" string="Edit Dispatch" icon="gtk-execute"/>
                        <button name="done" states="confirmed" string="Dispatch Complete" icon="gtk-execute"/>
                    </group>
                    <notebook colspan="4">
                        <page string="Stock Moves">
                            <field colspan="4" name="stock_moves" nolabel="1" widget="many2many" on_change="on_change_stock_moves(stock_moves)" domain="[('state', '=', 'assigned'), ('picking_type', '=', 'out'), '|', ('dispatch_id', '=', False), ('dispatch_id', '=', active_id)]" />
                        </page>
                        <page string="Notes">
                            <field colspan="4" name="notes" nolabel="1"/>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>

        <menuitem id="menu_action_dispatch_root" parent="stock.menu_stock_root" name="Dispatches"/>

        <record id="action_dispatch_form" model="ir.actions.act_window">
            <field name="name">Dispatches</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">stock.dispatch</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="view_dispatch_tree"/>
        </record>
        <menuitem action="action_dispatch_form" id="menu_action_dispatch_form" parent="menu_action_dispatch_root"/>

        <act_window
            domain="[('dispatch_id', '=', active_id)]"
            id="dispatch_view_stock_moves"
            name="Stock Moves for Dispatch"
            res_model="stock.move"
            src_model="stock.dispatch"
        />

    </data>
</openerp>
