<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_wizard_create_dispatch" model="ir.ui.view">
            <field name="name">Create Dispatch</field>
            <field name="model">stock.move.create_dispatch</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Create Dispatch">
                    <field name="move_ids" invisible="1"/>
                    <group col="2" colspan="2">
                        <field name="carrier_id" domain="[('category_id', 'child_of', [%(res_partner_category_dispatch)d])]"/>
                        <field name="dispatch_date"/>
                    </group>
                    <newline/>
                    <group col="2" colspan="2">
                        <button special="cancel" string="_Cancel" icon="gtk-cancel"/>
                        <button name="create_dispatch" string="Cre_ate" type="object" icon="terp-gtk-go-back-rtl"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_wizard_create_dispatch" model="ir.actions.act_window">
            <field name="name">Create Dispatch</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">stock.move.create_dispatch</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_wizard_create_dispatch"/>
            <field name="target">new</field>
        </record>

        <record model="ir.values" id="wizard_create_dispatch">
            <field name="model_id" ref="stock.model_stock_move" />
            <field name="object" eval="1" />
            <field name="name">Create Dispatch</field>
            <field name="key2">client_action_multi</field>
            <field name="value" eval="'ir.actions.act_window,' + str(ref('action_wizard_create_dispatch'))" />
            <field name="key">action</field>
            <field name="model">stock.move</field>
        </record>
    </data>
</openerp>

