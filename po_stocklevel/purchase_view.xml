<openerp>
    <data>
        <record id="purchase_order_form" model="ir.ui.view">
            <field name="name">purchase.order.form.po.stocklevel</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form" />
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='order_line']/tree/field[@name='product_qty']" position="after">
                        <field name="qty_available"/>
                        <field name="incoming_qty"/>
                    </xpath>
                </data>
            </field>
        </record>
        
        <record id="purchase_order_line_form" model="ir.ui.view">
            <field name="name">purchase.order.line.form.po.stocklevel</field>
            <field name="model">purchase.order.line</field>
            <field name="inherit_id" ref="purchase.purchase_order_line_form"/>
            <field name="arch" type="xml">
            <data>
                <xpath expr="/form/notebook/page/field[@name='product_qty']" position="after">
                    <field name="qty_available" readonly="0" on_change="onchange_stock_qtys(parent.pricelist_id,product_id,product_qty,product_uom,parent.partner_id, parent.date_order,parent.fiscal_position,date_planned,name,price_unit,notes,qty_available,incoming_qty,context)" />
                    <field name="incoming_qty" readonly="0" on_change="onchange_stock_qtys(parent.pricelist_id,product_id,product_qty,product_uom,parent.partner_id, parent.date_order,parent.fiscal_position,date_planned,name,price_unit,notes,qty_available,incoming_qty,context)" />
                </xpath>
                </data>
            </field>
        </record>
    </data>
</openerp>
