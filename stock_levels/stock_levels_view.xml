<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_stock_levels_tree" model="ir.ui.view">
            <field name="name">report.stock.levels.form</field>
            <field name="model">report.stock.levels</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Locations with Stock">
                    <field name="location_id" select="1"/>
                    <field name="product_id" select="1"/>
                    <field name="real" select="1"/>
                    <field name="product_uom"/>
                </tree>
            </field>
        </record>

        <record id="view_stock_levels_search" model="ir.ui.view">
            <field name="name">report.stock.levels.form</field>
            <field name="model">report.stock.levels</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Locations with Stock">
                   <group col="10" colspan="4">
                        <field name="location_id" select="1"/>
                        <field name="product_id" select="1"/>
                        <field name="real" select="1"/>
                        <field name="product_uom"/>
                    </group>
                    <newline/>
                    <group expand="0" string="Group By..." colspan="4" col="4" groups="base.group_extended">
                        <filter string="Product" icon="terp-stock_effects-object-colorize" domain="[]" context="{'group_by':'product_id'}"/>
                        <filter string="Location" icon="terp-personal" domain="[]" context="{'group_by':'location_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_stock_levels_tree" model="ir.actions.act_window">
            <field name="name">Stock levels in Locations</field>
            <field name="res_model">report.stock.levels</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
        </record>

        <!-- Menu item under Stock/Reporting -->
	<menuitem action="action_stock_levels_tree" 
		id="menu_report_stock_levels"
		parent="stock.next_id_61" 
	/>

	<act_window domain="[('product_id', 'in', active_ids)]" 
			id="act_product_product_report_stock_levels" 
			name="Stock levels" 
			res_model="report.stock.levels" 
			src_model="product.product"
	/>
    </data>
</openerp>
