        <!-- Add the log ID to external_report_lines tree view and search view -->
        <record id="external_report_log_line_search_view" model="ir.ui.view">
            <field name="name">external_report_log_line_search_view</field>
            <field name="model">external.report.line</field>
            <field name="inherit_id" ref="base_external_referentials.external_report_line_search_view" />
            <field name="type">search</field>
            <field name="arch" type="xml">
                <field name="referential_id" position="after">
                    <field name="external_log_id" />
                </field>
                <filter string='External Referential' position="after">
                    <filter string="External log" icon="terp-stock_symbol-selection" domain="[]" context="{'group_by': 'external_log_id'}" />
                </filter>
            </field>
        </record>

        <record id="external_report_log_line_tree_view" model="ir.ui.view">
            <field name="name">external_report_log_line_tree_view</field>
            <field name="model">external.report.line</field>
            <field name="inherit_id" ref="base_external_referentials.external_report_line_tree_view" />
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <field name="referential_id" position="after">
                    <field name="external_log_id" />
                </field>
            </field>
        </record>
