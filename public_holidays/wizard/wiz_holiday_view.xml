<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_wiz_holiday" model="ir.ui.view">
            <field name="name">wiz.holiday.form</field>
            <field name="model">wiz.holiday</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Check Functions">
                    <field name="h_date"/>
                    <field name="no_of_days"/>
                    <field name="country_id"/>
                    <field name="dummy_check" invisible="1"/>
                    <separator string="" colspan="4"/>
                    <group colspan="4" col="6" attrs="{'invisible':[('dummy_check','=',True)]}">
                        <button icon="gtk-cancel" special="cancel" string="Cancel"/>
                        <button icon="terp-gtk-go-back-rtl" string="Check" name="check_func" type="object"/>
                    </group>
                    <group colspan="4" attrs="{'invisible':[('dummy_check','=',False)]}">
						<field name="isWorkingDay"/>
						<field name="nextWorkingDay"/>
						<field name="desc" colspan="4" nolabel="1"/>
					</group>
                </form>
            </field>
        </record>

        <record id="action_view_wiz_holiday" model="ir.actions.act_window">
            <field name="name">Testing Functions</field>
            <field name="res_model">wiz.holiday</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_wiz_holiday"/>
            <field name="target">new</field>
        </record>

        <menuitem icon="STOCK_PRINT" action="action_view_wiz_holiday"
            id="menu_action_view_wiz_holiday"
            parent="public_holidays.action_holiday" />
    </data>
</openerp>
