<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_wiz_holiday" model="ir.ui.view">
            <field name="name">wiz.holiday.form</field>
            <field name="model">wiz.holiday</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Check Functions">
                    <field name="h_date"/>
                    <field name="no_of_days"/>
                    <field name="country_id"/>
                    <separator string="The below details will be updated on click of 'Update' button !" colspan="4"/>
                    <group colspan="4">
						<field name="isWorkingDay" readonly="1"/>
						<field name="nextWorkingDay" readonly="1"/>
						<label string="Details of Next Working Day(s)" colspan="4"/>
						<field name="desc" colspan="4" nolabel="1" readonly="1"/>
					</group>
                    <separator string="" colspan="4"/>
                    <group colspan="4" col="6">
                        <button icon="gtk-cancel" special="cancel" string="Cancel"/>
                        <button icon="terp-gtk-go-back-rtl" string="Update" name="check_func" type="object"/>
                    </group>
                    <separator string="" colspan="4"/>
                </form>
            </field>
        </record>

        <record id="action_view_wiz_holiday" model="ir.actions.act_window">
            <field name="name">Weekend/Holiday Date Testing</field>
            <field name="res_model">wiz.holiday</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_wiz_holiday"/>
            <field name="target">new</field>
        </record>

        <menuitem icon="STOCK_PRINT" action="action_view_wiz_holiday"
            id="menu_action_view_wiz_holiday"
            parent="public_holidays.menu_open_holidays" />
    </data>
</openerp>
