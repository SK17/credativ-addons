<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
    	<record id="uk_may_day" model="hr.public.holiday.rule">
            <field name="name">May Day</field>
            <field name="is_recurring">True</field>
            <field name="recurring_week">0</field>
<!--            <field name="recurring_day">Monday</field>-->
            <field name="recurring_month">05</field>
        </record>
        
        <record id="uk_spring_day" model="hr.public.holiday.rule">
            <field name="name">Spring Day</field>
            <field name="is_recurring">True</field>
            <field name="recurring_week">-1</field>
<!--            <field name="recurring_day">Monday</field>-->
            <field name="recurring_month">05</field>
        </record>
        
        <record id="uk_summer_day" model="hr.public.holiday.rule">
            <field name="name">Summer Bank Holiday</field>
            <field name="is_recurring">True</field>
            <field name="recurring_week">0</field>
<!--            <field name="recurring_day">Monday</field>-->
            <field name="recurring_month">08</field>
        </record>
        
        <record id="uk_may_day" model="hr.public.holiday.rule">
            <field name="name">May Day</field>
            <field name="is_recurring">True</field>
            <field name="recurring_week">0</field>
<!--            <field name="recurring_day">Monday</field>-->
            <field name="recurring_month">05</field>
        </record>
        
        <!-- Scheduler -->
        <record forcecreate="True" id="ir_cron_holiday_action" model="ir.cron">
            <field name="name">Run scheduler to calculate the actual date of holiday</field>
            <field eval="True" name="active"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field eval="False" name="doall"/>
            <field name="model">hr.public.holiday.rule</field>
            <field name="function">_fetch_holidays</field>
            <field name="args">()</field>
        </record>
        
    </data>
</openerp>