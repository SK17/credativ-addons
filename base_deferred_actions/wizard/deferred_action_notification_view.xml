<?xml version="1.0" encoding="utf-8" ?>

<openerp>
    <data>

        <record id="view_deferred_action_notification_wizard" model="ir.ui.view">
            <field name="name">deferred.action.notification.wizard</field>
            <field name="model">deferred.action.notification</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Deferred Action">
                    <group col="1" colspan="4">
                        <field name="title" nolabel="1" />
                        <separator string="Message" />
                        <field name="message" nolabel="1" />
                        <button type="object"
                                name="ok_button"
                                string="OK"
                                icon="gtk-ok" />
                    </group>
                </form>
            </field>
        </record>

    </data>
</openerp>
