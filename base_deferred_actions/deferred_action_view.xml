<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>
        <record id="view_deferred_action_form" model="ir.ui.view">
            <field name="name">deferred.action.form</field>
            <field name="model">deferred.action</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Deferred Action">
                    <group colspan="2" col="2">
                        <separator orientation="horizontal" string="Call Details" colspan="2"/>
                        <field name="name" />
                        <field name="date_requested" />
                        <field name="date_completed" />
                        <field name="retry_of" />
                        <separator orientation="horizontal" string="Result" colspan="2"/>
                        <field name="result" nolabel="1" colspan="2" />
                    </group>
                    <group colspan="2" col="2">
                        <separator orientation="horizontal" string="Deferred Action Details" colspan="2"/>
                        <field name="user_id" />
                        <field name="model" />
                        <field name="function" />
                        <field name="res_id" />
                        <separator orientation="horizontal" string="Arguments" colspan="2"/>
                        <field name="args" nolabel="1" colspan="2" />
                        <field name="kwargs" nolabel="1" colspan="2" />
                    </group>
                    <separator orientation="horizontal" string="State" colspan="4"/>
                    <group colspan="4" col="6">
                        <field name="state" colspan="2" />
                        <button string="Run" name="run" states="pending" type="object" icon="terp-gtk-go-back-rtl" colspan="1" />
                        <button string="Cancel" name="cancel" states="pending" type="object" icon="terp-dialog-close" colspan="1" />
                        <button string="Retry" name="retry" states="fail,cancel" type="object" icon="terp-mail-forward" colspan="1" />
                    </group>
                </form>
            </field>
        </record>

        <record id="view_deferred_action_tree" model="ir.ui.view">
            <field name="name">deferred.action.tree</field>
            <field name="model">deferred.action</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Deferred Actions">
                    <field name="name" />
                    <field name="model" />
                    <field name="function" />
                    <field name="res_id" />
                    <field name="user_id" />
                    <field name="date_requested" />
                    <field name="date_completed" />
                    <field name="state" />
                    <button string="Run" name="run" states="pending" type="object" icon="terp-gtk-go-back-rtl" />
                    <button string="Cancel" name="cancel" states="pending" type="object" icon="terp-dialog-close" />
                    <button string="Retry" name="retry" states="fail,cancel" type="object" icon="terp-mail-forward" />
                </tree>
            </field>
        </record>

        <record id="view_deferred_action_search" model="ir.ui.view">
            <field name="name">deferred.action.search</field>
            <field name="model">deferred.action</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Search Deferred Actions">
                    <group>
                        <filter icon="terp-gtk-go-back-rtl" name="pending" string="Pending" domain="[('state','=','pending')]"/>
                        <filter icon="terp-check" name="done" string="Done" domain="[('state','=','done')]"/>
                        <filter icon="terp-gtk-stop" name="failed" string="Failed" domain="[('state','=','fail')]"/>
                        <filter icon="terp-dialog-close" name="cancel" string="Cancel" domain="[('state','=','cancel')]"/>
                        <separator orientation="vertical"/>
                        <field name="name" />
                        <field name="function" />
                        <field name="model" />
                        <newline />
                        <field name="res_id" />
                        <field name="user_id" />
                        <field name="date_requested" />
                        <field name="date_completed" />
                    </group>
                </search>
            </field>
        </record>

        <record id="action_deferred_action_tree" model="ir.actions.act_window">
            <field name="name">Deferred Actions</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">deferred.action</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_deferred_action_tree" />
            <field name="search_view_id" ref="view_deferred_action_search" />
        </record>

        <menuitem id="menu_deferred_actions" action="action_deferred_action_tree" parent="base.next_id_6" />

    </data>
</openerp>
