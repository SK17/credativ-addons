<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_warehouse_wms" model="ir.ui.view">
            <field name="name">stock.warehouse</field>
            <field name="model">stock.warehouse</field>
            <field name="inherit_id" ref="stock.view_warehouse" />
            <field name="type">form</field>
            <field name="arch" type="xml">
                <field name="partner_address_id" position="after">
                    <group col="4" colspan="4">
                        <separator string="External WMS" colspan="4" />
                        <notebook colspan="4">
                            <page string="Actions">
                                <separator string="Regular actions" colspan="4" />
                                <button name="export_purchase_orders" string="1 - Export Purchase Orders" colspan="2" type="object" />
                                <button name="import_purchase_order_receipts" string="2 - Import Purchase Order Receipts" colspan="2" type="object" />
                                <button name="export_dispatches" string="3 - Export Dispatches" colspan="2" type="object" />
                                <button name="import_dispatch_receipts" string="4 - Import Dispatch Receipts" colspan="2" type="object" />
                            </page>
                            <page string="External Warehouse Settings">
                                <field name="referential_id"/>
                            </page>
                        </notebook>
                    </group>
                </field>
            </field>
        </record>

        <record id="act_external_warehouse_form" model="ir.actions.act_window">
                <field name="name">External Warehouses</field>
                <field name="res_model">stock.warehouse</field>
                <field name="type">ir.actions.act_window</field>
                <field name="view_type">form</field>
                <field name="view_mode">tree,form</field>
                <field name="domain">[('referential_id.type_id.name', '=', 'External WMS Integration')]</field>
        </record>
        
        <menuitem id="menu_external_warehouse" name="External Warehouses" parent="menu_wms_integration" action="act_external_warehouse_form" />
    </data>
</openerp>
