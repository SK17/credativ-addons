<openerp>
    <data>
        <record id="view_purchase_advance_payment" model="ir.ui.view">
            <field name="name">PO Payment</field>
            <field name="model">purchase.advance.payment</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="PO Payment">
                    <group col="6" colspan="4">
                        <field name="purchase_order_id" invisible="1"/>
                        <field name="partner_id"/>
                        <field name="amount" on_change="onchange_amount(amount, partner_id, purchase_order_id, journal_id, line_ids, state)"/>
                        <field name="journal_id" domain="[('type','in',['bank', 'cash'])]" widget="selection" string="Payment Method" on_change="onchange_journal(amount, partner_id, purchase_order_id, journal_id, line_ids, state)"/>
                        <field name="date"/>
                        <field name="reference" string="Payment Ref"/>
                        <field name="name"/>
                    </group>
                    <field name="line_ids" on_change="onchange_line_ids(amount, partner_id, purchase_order_id, journal_id, line_ids)" colspan="4" nolabel="1" height="180" attrs="{'invisible':[('state','!=','payment')]}">
                        <tree string="Voucher Items" editable="bottom">
                            <field name="invoice_id"/>
                            <field name="move_line_id"/>
                            <field name="date_original"/>
                            <field name="date_due"/>
                            <field name="amount_original"/>
                            <field name="amount_unreconciled" sum="Total Balance"/>
                            <field name="amount" sum="Total Amount"/>
                        </tree>
                    </field>
                    <separator colspan="4"/>
                    <button special="cancel" string="Cancel" icon="gtk-cancel"/>
                    <button name="advance_pay" string="Advance Payment" type="object" icon="gtk-ok" attrs="{'invisible':[('state','!=','advance')]}"/>
                    <button name="pay" string="Pay (Draft)" type="object" icon="gtk-ok"  attrs="{'invisible':[('state','!=','payment')]}"/>
                    <button name="pay_and_validate" string="Pay and Validate" type="object" icon="gtk-ok" attrs="{'invisible':[('state','!=','payment')]}"/>
                    <field name="state" invisible="1"/>
                </form>
            </field>
        </record>
        <record id="action_purchase_advance_payment" model="ir.actions.act_window">
            <field name="name">PO Payment</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">purchase.advance.payment</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_purchase_advance_payment"/>
            <field name="target">new</field>
        </record>
        <record model="ir.values" id="purchase_advance_payment">
            <field name="model_id" ref="purchase.model_purchase_order" />
            <field name="object" eval="1" />
            <field name="name">PO Payment</field>
            <field name="key2">client_action_multi</field>
            <field name="value" eval="'ir.actions.act_window,' + str(ref('action_purchase_advance_payment'))" />
            <field name="key">action</field>
            <field name="model">purchase.order</field>
        </record>
    </data>
</openerp>
