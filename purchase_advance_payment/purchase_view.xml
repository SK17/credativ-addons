<openerp>
    <data>
        <record id="purchase_order_form" model="ir.ui.view">
            <field name="name">purchase.order.form.advance_payment</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form" />
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//group[button[@string='Print']]" position="attributes">
                        <attribute name="col">12</attribute>
                    </xpath>
                    <xpath expr="//button[@string='Print']" position="after">
                        <button name="%(action_purchase_advance_payment)d" string="Advance Payment" states="approved" type="action" icon="terp-dolar"/>
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</openerp>
