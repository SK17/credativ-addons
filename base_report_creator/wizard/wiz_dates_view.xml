<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="base_report_creator_date_wizard_form" model="ir.ui.view">
            <field name="name">base_report_creator.date_wizard.form</field>
            <field name="model">base_report_creator.date_wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Enter date range for report">
                    <group colspan="4" >
                        <separator string="Date Range" colspan="4"/>
                        <field name="from_menu" invisible="True" />
                        <field name="from_date"/>
                        <field name="to_date"/>
                    </group>
                    <separator string="" colspan="4" />
                    <group colspan="4" col="6">
                        <button icon="gtk-cancel" special="cancel" string="Cancel" attrs="{'invisible':[('from_menu','!=',False)]}" />
                        <button icon="gtk-open" string="Open Report" name="report_run" type="object"/>
                    </group>
               </form>
            </field>
        </record>
        
        <record id="action_base_report_creator_date_wizard_form" model="ir.actions.act_window">
            <field name="name">Enter date range for report</field>
            <field name="res_model">base_report_creator.date_wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
           <field name="view_id" ref="base_report_creator_date_wizard_form"/> 
           <field name="target">new</field>
        </record>
    </data>
</openerp>