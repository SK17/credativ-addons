<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <report auto="False" id="sale_report_customer_pdf" model="res.partner" name="sale.customer.pdf" rml="sale_report_customer/sale_report_customer.rml" string="Sales by Customer (All - PDF)"/>
        <report id="sale_report_customer_csv" model="res.partner" name="sale.customer.csv" string="Sales by Customer (All - CSV)"/>
        <record id="view_wizard_sale_report" model="ir.ui.view">
            <field name="name">Sales by Customer (By Date)</field>
            <field name="model">sale.order.wizard_customer_report</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Sales by Supplier">
                    <group col="4" colspan="4">
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                    <group col="4" colspan="3">
                        <button special="cancel" string="_Cancel" icon="gtk-cancel"/>
                        <button name="run_report_pdf" string="_Run PDF Report" type="object" icon="terp-gtk-go-back-rtl"/>
                        <button name="run_report_csv" string="_Run CSV Report" type="object" icon="terp-gtk-go-back-rtl"/>
                    </group>
                </form>
            </field>
        </record>
        <record id="action_wizard_sale_report" model="ir.actions.act_window">
            <field name="name">Sales by Customer (By Date)</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.order.wizard_customer_report</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_wizard_sale_report"/>
            <field name="target">new</field>
        </record>
        <record model="ir.values" id="wizard_sale_report">
            <field name="model_id" ref="base.model_res_partner" />
            <field name="object" eval="1" />
            <field name="name">Sales by Customer (By Date)</field>
            <field name="key2">client_action_multi</field>
            <field name="value" eval="'ir.actions.act_window,' + str(ref('action_wizard_sale_report'))" />
            <field name="key">action</field>
            <field name="model">res.partner</field>
        </record>
    </data>
</openerp>
