<openerp>
    <data>
        <record id="credit_line_action_form" model="ir.ui.view">
            <field name="name">credit.line.action.form</field>
            <field name="model">credit.control.action</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <separator string="Run actions for the selected lines" colspan="4"/>
                    <newline/>
                    <field name="line_ids" colspan="4" nolabel="1" />
                    <newline/>
                    <group colspan="4">
                        <button special="cancel" string="Cancel" icon='gtk-cancel'/>
                        <button name="action_lines" string="Run the actions" type="object" icon="gtk-execute"/>
                    </group>
                </form>
            </field>
        </record>

        <!-- for menu -->
        <act_window name="Run Actions"
            res_model="credit.control.action"
            src_model="credit.control.line"
            view_mode="form"
            target="new"
            key2="client_action_multi"
            id="open_credit_line_action_wizard_menu_action"/>

        <!-- for button -->
        <record id="open_credit_line_action_wizard" model="ir.actions.act_window">
            <field name="name">Run Actions</field>
            <field name="res_model">credit.control.action</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="credit_line_action_form"/>
            <field name="target">new</field>
            <field name="help">Run actions for the selected lines.</field>
        </record>
    </data>
</openerp>
