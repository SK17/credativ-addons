<openerp>
    <data>

        <record id="phonecall_credit_control" model="ir.actions.server">
            <field name="type">ir.actions.server</field>
            <field name="condition">True</field>
            <field name="state">object_create</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="srcmodel_id" ref="crm.model_crm_phonecall"/>
            <field eval="5" name="sequence"/>
           <field name="name">Credit Control Phonecall</field>
        </record>

        <record id="phonecall_credit_control_line_10" model="ir.server.object.lines">
            <field name="server_id" ref="phonecall_credit_control"/>
            <field name="col1" ref="crm.field_crm_phonecall_date"/>
            <field name="type">equation</field>
            <field name="value">time.strftime('%Y-%m-%d %H:%M:%S', time.localtime(time.time()))</field>
        </record>

        <record id="phonecall_credit_control_line_20" model="ir.server.object.lines">
            <field name="server_id" ref="phonecall_credit_control"/>
            <field name="col1" ref="crm.field_crm_phonecall_name"/>
            <field name="type">equation</field>
            <field name="value">'Credit Control Followup: '+(obj.name or '')</field>
        </record>

        <record id="phonecall_credit_control_line_30" model="ir.server.object.lines">
            <field name="server_id" ref="phonecall_credit_control"/>
            <field name="col1" ref="crm.field_crm_phonecall_description"/>
            <field name="type">equation</field>
            <field name="value">'Credit Control Followup: '+(obj.name or '')</field>
        </record>

        <record id="phonecall_credit_control_line_40" model="ir.server.object.lines">
            <field name="server_id" ref="phonecall_credit_control"/>
            <field name="col1" ref="crm.field_crm_phonecall_partner_id"/>
            <field name="type">equation</field>
            <field name="value">obj.id</field>
        </record>

        <record id="phonecall_credit_control_line_50" model="ir.server.object.lines">
            <field name="server_id" ref="phonecall_credit_control"/>
            <field name="col1" ref="crm.field_crm_phonecall_state"/>
            <field name="type">value</field>
            <field name="value">open</field>
        </record>

    </data>
</openerp>
