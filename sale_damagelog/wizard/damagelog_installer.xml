<openerp>
    <data>

		<!-- Configuration View -->
        <record id="view_damagelog_config_form" model="ir.ui.view">
          <field name="name">Migrate Your Damagelog Records</field>
          <field name="model">damagelog.migrate.config</field>
          <field name="type">form</field>
          <field name="inherit_id" ref="base.res_config_view_base"/>
          <field name="arch" type="xml">
            <data>
              <form position="attributes">
                <attribute name="string">Migrate Your Damage Log Records</attribute>
              </form>
            <xpath expr="//separator[@string=&quot;title&quot;]" position="attributes">
                  <attribute name="string">Migrate Damage Log Records</attribute>
            </xpath>
            <xpath expr="//label[@string='description']" position="attributes">
              <attribute name="string">This will update all existing data by setting the default category according to the previous flag selection. Afterwards, users are free to change those values from Damage Log form.</attribute>
            </xpath>
            <xpath expr="//separator[@string=&quot;vsep&quot;]" position="attributes">
                  <attribute name="string"/>
                  <attribute name="rowspan">12</attribute>
            </xpath>
             <group string="res_config_contents" position="replace">
                    <group colspan="4">
                    	<field name="note" colspan="4" nolabel="1" readonly="1"/>
                  </group>
              </group>
            </data>
          </field>
      </record>
      
      <record id="action_damagelog_config_form" model="ir.actions.act_window">
          <field name="name">Migrate Damagelog Data</field>
          <field name="type">ir.actions.act_window</field>
          <field name="res_model">damagelog.migrate.config</field>
          <field name="view_type">form</field>
          <field name="view_id" ref="view_damagelog_config_form"/>
          <field name="view_mode">form</field>
          <field name="target">new</field>
      </record>
        
        
         <!-- Register Configuration Wizard -->
        <record id="config_wizard_res_product_installer" model="ir.actions.todo">
            <field name="action_id" ref="action_damagelog_config_form"/>
            <field name="category_id" ref="base.category_sales_management_config"/>
            <field name="type">automatic</field>
            <field name="sequence">20</field>
        </record>
        
    </data>
</openerp>
