<?xml version="1.0"?>
<openerp>
    <data>
        <record id="view_order_form_edit" model="ir.ui.view">
            <field name="name">sale.order.form.edit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form" />
            <field name="arch" type="xml">
                <button name="invoice_cancel" position="after">
                    <button name="action_run_order_edit" states="progress,manual" string="Edit Order" type="object" groups="base.group_user"/>
                </button>
                <field name="origin" position="after">
                    <field name="order_edit_id"/>
                </field>
            </field>
        </record>
    </data>
</openerp>