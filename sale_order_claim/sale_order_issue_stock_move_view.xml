<?xml version="1.0" encoding="utf-8" ?>

<openerp>
    <data>

        <!-- Add the stock.move fields to the issues one2many view -->

        <record model="ir.ui.view" id="view_sale_order_claim_form_stock_move_issues">
            <field name="name">sale.order.claim.form.stock_move_issues</field>
            <field name="model">sale.order.claim</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="view_sale_order_claim_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_issue_ids']/tree/field[@name='resource']" position="after">
                    <field name="stock_move_id"
                           attrs="{'invisible':[('order_claim_id.issue_model','!=','stock.move')]}" />
                </xpath>

                <xpath expr="//field[@name='order_issue_ids']/tree/field[@name='reason']" position="after">
                    <field name="sm_date"
                           attrs="{'invisible':[('order_claim_id.issue_model','!=','stock.move')]}" />
                    <field name="sm_product"
                           attrs="{'invisible':[('order_claim_id.issue_model','!=','stock.move')]}" />
                    <field name="sm_product_qty"
                           attrs="{'invisible':[('order_claim_id.issue_model','!=','stock.move')]}" />
                    <field name="sm_state"
                           attrs="{'invisible':[('order_claim_id.issue_model','!=','stock.move')]}" />
                    <field name="sm_price_unit"
                           attrs="{'invisible':[('order_claim_id.issue_model','!=','stock.move')]}" />
                </xpath>
            </field>
        </record>

    </data>
</openerp>
