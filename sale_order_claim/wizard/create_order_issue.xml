<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_wizard_create_damagelog_from_product" model="ir.ui.view">
            <field name="name">Create Issue Log From Product</field>
            <field name="model">sale.create.damagelog.from.product</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Create Issue Log From Product">
                    <group col="2" colspan="2">
                        <field name="product_id" invisible="1"/>
                        <field name="stock_move_id" domain="[('product_id','=',product_id)]"/>
                        <field name="category" />
                    </group>
                    <newline/>
                    <group col="2" colspan="2">
                        <button special="cancel" string="_Cancel" icon="gtk-cancel"/>
                        <button name="create_damagelog" string="Cre_ate" type="object" icon="terp-gtk-go-back-rtl"/>
                    </group>
                </form>
            </field>
        </record>

