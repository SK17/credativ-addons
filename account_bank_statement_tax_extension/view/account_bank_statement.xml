<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_bank_statement_form" model="ir.ui.view">
            <field name="name">Add tax to the embedded bank statement line form tax</field>
            <field name="inherit_id" ref="account_bank_statement_tax.view_bank_statement_form" />
            <field name="model">account.bank.statement</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='line_ids']/tree/field[@name='tax_id']" position="attributes">
                    <!-- Options depends on web_m2x_options module-->
                    <attribute name="options">{'create': false, 'create_edit': false, 'no_open': true}</attribute>
                </xpath>
            </field>
        </record>
    </data>
</openerp>

