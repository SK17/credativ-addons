<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- Workflow -->
        <record id="dispatch_wkf" model="workflow">
            <field name="name">Dispatch Workflow</field>
            <field name="osv">stock.dispatch</field>
            <field name="on_create">True</field>
        </record>
        
        <!-- Activity -->
        <record id="act_dispatch_draft" model="workflow.activity">
            <field name="wkf_id" ref="dispatch_wkf"/>
            <field name="flow_start">True</field>
            <field name="name">dispatch_draft</field>
            <field name="kind">function</field>
            <field name="action">action_draft()</field>
        </record>

        <record id="act_dispatch_confirmed" model="workflow.activity">
            <field name="wkf_id" ref="dispatch_wkf"/>
            <field name="name">dispatch_confirmed</field>
            <field name="kind">function</field>
            <field name="action">action_confirm()</field>
        </record>

        <record id="act_dispatch_done" model="workflow.activity">
            <field name="wkf_id" ref="dispatch_wkf"/>
            <field name="flow_stop">True</field>
            <field name="name">dispatch_done</field>
            <field name="kind">function</field>
            <field name="action">action_done()</field>
        </record>

        <record id="act_dispatch_cancel" model="workflow.activity">
            <field name="wkf_id" ref="dispatch_wkf"/>
            <field name="flow_stop">True</field>
            <field name="name">dispatch_cancel</field>
            <field name="kind">function</field>
            <field name="action">action_cancel()</field>
        </record>

        <!-- Transition -->
        <record id="trans_dispatch_draft_confirmed" model="workflow.transition">
            <field name="act_from" ref="act_dispatch_draft"/>
            <field name="act_to" ref="act_dispatch_confirmed"/>
            <field name="signal">confirmed</field>
        </record>

        <record id="trans_dispatch_confirmed_draft" model="workflow.transition">
            <field name="act_from" ref="act_dispatch_confirmed"/>
            <field name="act_to" ref="act_dispatch_draft"/>
            <field name="signal">draft</field>
        </record>

        <record id="trans_dispatch_confirmed_done" model="workflow.transition">
            <field name="act_from" ref="act_dispatch_confirmed"/>
            <field name="act_to" ref="act_dispatch_done"/>
            <field name="signal">done</field>
        </record>

        <record id="trans_dispatch_draft_cancel" model="workflow.transition">
            <field name="act_from" ref="act_dispatch_draft"/>
            <field name="act_to" ref="act_dispatch_cancel"/>
            <field name="signal">cancel</field>
        </record>

        <record id="trans_dispatch_confirmed_cancel" model="workflow.transition">
            <field name="act_from" ref="act_dispatch_confirmed"/>
            <field name="act_to" ref="act_dispatch_cancel"/>
            <field name="signal">cancel</field>
        </record>

    </data>
</openerp>
