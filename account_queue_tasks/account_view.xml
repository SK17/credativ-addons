<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="invoice_supplier_form_defer" model="ir.ui.view">
            <field name="name">account.invoice.supplier.form.defer</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form" />
            <field name="arch" type="xml">
                <!--Validate-->
                <xpath expr="//button[@name='invoice_open']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//button[@name='invoice_open']" position="after">
                    <button name="invoice_open_defer" states="draft,confirmed,sent" type="object" string="Cancel Order"/>
                    <button name="invoice_open_defer" states="draft,proforma2" type="object" string="Validate" class="oe_highlight" groups="account.group_account_invoice"/>
                </xpath>
            </field>
        </record>

        <record id="invoice_form_defer" model="ir.ui.view">
            <field name="name">account.invoice.form.defer</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form" />
            <field name="arch" type="xml">
                <!--Validate Draft-->
                <xpath expr="//button[@name='invoice_open'][1]" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//button[@name='invoice_open'][1]" position="attributes">
                    <button name="invoice_open_defer" states="draft" type="object" string="Validate" class="oe_highlight" groups="base.group_user"/>
                </xpath>
                <!--Validate Proforma-->
                <xpath expr="//button[@name='invoice_open'][2]" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//button[@name='invoice_open'][2]" position="attributes">
                    <button name="invoice_open_defer" states="proforma2" type="object" string="Validate" groups="base.group_user"/>
                </xpath>
            </field>
        </record>

    </data>
</openerp>