<openerp>
    <data>

        <record id="sale_procurement_forecast_tree_view" model="ir.ui.view">
            <field name="name">Sale Procurement Forecast</field>
            <field name="model">sale.procurement.forecast</field>
            <field name="arch" type="xml">
                <tree string="Sale Procurement Forecast">
                    <field name="name"/>
                    <field name="company_id"/>
                    <field name="date_start"/>
                    <field name="date_stop"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="sale_procurement_forecast_form_view" model="ir.ui.view">
            <field name="name">Sale Procurement Forecast</field>
            <field name="model">sale.procurement.forecast</field>
            <field name="arch" type="xml">
                <form string="Sale Procurement Forecast" version="7.0">
                    <header>
                        <button name="action_confirm" type="object" states="draft" string="Confirm" groups="base.group_user"/>
                        <button name="action_done" type="object" states="confirm" string="Validate" groups="base.group_user"/>
                        <button name="action_draft" type="object" states="confirm,cancel" string="Reset to Draft" groups="base.group_user"/>
                        <button name="action_cancel" type="object" states="draft,confirm" string="Cancel" groups="base.group_user"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm,done"/>
                </header>
                <sheet>
                    <h1>
                        <label string="Sale Procurement Forecast "/>
                        <field name="name" class="oe_inline"/>
                    </h1>
                    <group>
                        <group>
                            <field name="date_start" on_change="onchange_date_start(date_start, date_stop, days)"/>
                            <field name="date_stop" on_change="onchange_days_date_stop(date_start, date_stop, days)"/>
                            <field name="days" on_change="onchange_days_date_stop(date_start, date_stop, days)"/>
                        </group>
                        <group>
                            <field name="company_id" on_change="onchange_company_id(company_id)"/>
                            <field name="warehouse_id"/>
                        </group>
                    </group>
                    <group attrs="{'invisible': [('state', 'in', ('confirm', 'done'))]}">
                        <separator string="Shops" colspan="4"/>
                        <field name="shop_ids" nolabel="1" colspan="4">
                            <tree name="Shops">
                                <field name="name"/>
                            </tree>
                        </field>
                        <separator string="Products" colspan="4"/>
                        <field name="product_ids" nolabel="1" colspan="4">
                            <tree name="Products">
                                <field name="name"/>
                                <field name="default_code"/>
                            </tree>
                        </field>
                    </group>
                    <group attrs="{'invisible': [('state', 'not in', ('confirm', 'done'))]}">
                        <separator string="Sale Procurement Forecast Lines" colspan="4"/>
                        <field name="forecast_line_ids" nolabel="1" colspan="4">
                            <tree name="Sale Procurement Forecast Lines" editable="bottom" colors="red:procurement_state == 'exception';grey:procurement_state == 'cancel';green:procurement_state == 'done'">
                                <field name="product_id"/>
                                <field name="uom_id"/>
                                <field name="qty_sold"/>
                                <field name="qty_sold_avg"/>
                                <field name="qty_virtual"/>
                                <field name="date_begin" invisible="1"/>
                                <field name="date_end" on_change="onchange_date_end(date_begin, date_end, qty_sold_avg, qty_virtual)"/>
                                <field name="qty_sales_future"/>
                                <field name="qty_order"/>
                                <field name="procurement_id"/>
                                <button name="open_procurement" type="object" string="Open Procurement" icon="gtk-jump-to" attrs="{'invisible': [('procurement_id', '=', False)]}"/>
                                <field name="procurement_state"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
                </form>
            </field>
        </record>

        <record id="action_sale_procurement_forecast_tree_view" model="ir.actions.act_window">
             <field name="name">Sale Procurement Forecast</field>
             <field name="res_model">sale.procurement.forecast</field>
             <field name="type">ir.actions.act_window</field>
             <field name="view_type">form</field>
             <field name="view_mode">tree,form</field>
             <field name="view_id" ref="sale_procurement_forecast_tree_view"/>
             <field name="context">{}</field>
       </record>

        <menuitem id="menu_sale_procurement_forecast" name="Forecasting"
            parent="base.menu_base_partner" sequence="10"/>

        <menuitem
            name="Sales Forecasts"
            action="action_sale_procurement_forecast_tree_view"
            id="menu_sale_procurement_forecast_form"
            parent="menu_sale_procurement_forecast"/>

    </data>
</openerp>
