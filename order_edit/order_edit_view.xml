<openerp>
    <data>
        <record id="view_order_form" model="ir.ui.view">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <data>
                    <field name="origin" position="after">
                        <field name="original_order" />
                        <field name="edited_order" />
                    </field>
                    <xpath expr="//field[@name='order_line']/tree/field[@name='product_uom_qty']" position="after">
                        <field name="original_done" invisible="1" />
                    </xpath>
                    <xpath expr="//field[@name='order_line']/tree" position="attributes">
                        <attribute name="colors">gray:original_done == True</attribute>
                    </xpath>
                    <xpath expr="//field[@name='order_line']/form/notebook" position="attributes">
                        <attribute name="attrs">{'readonly': [('state', '!=', 'draft')]}</attribute>
                    </xpath>
                    <xpath expr="//field[@name='order_line']/form/notebook/page/group/group[button/@string='Make Invoices']" position="attributes">
                        <attribute name="attrs">{'invisible': ['|', ('invoiced','=',True), ('parent.state', '=', 'draft')]}</attribute>
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</openerp>